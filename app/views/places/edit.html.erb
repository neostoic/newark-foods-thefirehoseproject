<div class="container">
  <div class="row">
    <div class="col-sm-6 col-sm-offset-3">
      <div class="well">
        <h2>Update <em><%= @place.name %></em></h2>
        <%= simple_form_for @place do |form| %>
					<%= form.input :name %>
					<%= form.input :address %>
					<%= form.input :description %>
					<hr>
					<%= form.submit("Submit Your Restaurant", class: 'btn btn-primary pull-right') %>
					<div class="clearfix"></div>
				<% end %>
      </div>
    </div>
  </div>
</div>
